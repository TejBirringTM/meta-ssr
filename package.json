{
  "name": "ssr-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "resync-db": "PG_URL=$MIGRATION_PG_URL && prisma generate --schema ./prisma/postgres/schema && prisma db push --schema ./prisma/postgres/schema --force-reset",
    "test:unit:frontend": "vitest --config vitest.unit.frontend.config.mts",
    "test:unit:backend": "vitest --config vitest.unit.backend.config.mts",
    "test:integration:frontend+api": "vitest --config vitest.integration.frontend+api.config.mts",
    "test:integration:api+db": "vitest --config vitest.integration.api+db.config.mts",
    "test:e2e:install-browsers": "playwright install --with-deps",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --ui --debug"
  },
  "eslintConfig": {
    "cache": true,
    "cacheLocation": "node_modules/.cache/eslint"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@testing-library/jest-dom": "^6.6.3",
    "clsx": "^2.1.1",
    "next": "15.3.1",
    "next-auth": "^4.24.11",
    "qs": "^6.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.3",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/qs": "^6.9.18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.0",
    "daisyui": "^5.0.37",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "mongodb": "^6.16.0",
    "msw": "^2.8.4",
    "next-router-mock": "^1.0.2",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.3",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1",
    "tailwindcss": "^4.1.7",
    "testcontainers": "^10.28.0",
    "ts-essentials": "^10.0.4",
    "typescript": "^5",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
